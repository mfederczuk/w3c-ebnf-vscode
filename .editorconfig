# SPDX-License-Identifier: CC0-1.0

# <https://editorconfig.org/>

root = true

[*]
charset = utf-8
indent_style = tab
indent_size = 4
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
max_line_length = 120

[{COPYING.txt,LICENSE.txt}]
indent_style = space
indent_size = 8

[*.{yaml,yml}]
indent_style = space
indent_size = 2

[*.md]
indent_style = space
indent_size = 2
trim_trailing_whitespace = false

[*.{diff,patch}]
trim_trailing_whitespace = false
